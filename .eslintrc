{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": 0,
    "camelcase": 0,
    "no-useless-constructor": 0,
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  },
  "plugins": [ "flowtype" ]
}
